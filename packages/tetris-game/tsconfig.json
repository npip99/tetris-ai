{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es6"],
    "composite": true,

    "incremental": true,
    "tsBuildInfoFile": "./build/global-buildinfo-file",

    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,

    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "build",
    "node_modules",
  ],
}
